# Originally from https://serverfault.com/a/767079
# Modified from SteamOS 3 99-sdcard-mount.rules
# Run a mount script through systemd on any removable media activity

KERNEL=="mmcblk[0-9]p[0-9]]", ACTION=="add", RUN+="/bin/systemctl start media-mount@%k.service"
KERNEL=="mmcblk[0-9]p[0-9]]", ACTION=="remove", RUN+="/bin/systemctl stop media-mount@%k.service"
KERNEL=="nvme[0-9]n[0-9]p[0-9]", SUBSYSTEMS=="usb", ACTION=="add", RUN+="/bin/systemctl start media-mount@%k.service"
KERNEL=="nvme[0-9]n[0-9]p[0-9]", SUBSYSTEMS=="usb", ACTION=="remove", RUN+="/bin/systemctl stop media-mount@%k.service"
KERNEL=="sd[a-z][0-9]", SUBSYSTEMS=="usb", ACTION=="add", RUN+="/bin/systemctl start media-mount@%k.service"
KERNEL=="sd[a-z][0-9]", SUBSYSTEMS=="usb", ACTION=="remove", RUN+="/bin/systemctl stop media-mount@%k.service"
